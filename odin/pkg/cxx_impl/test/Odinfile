%all_tests.tree == <<
()+cmd=sh (%test-a.sh) (%expect-a) (%sorted-basenames-a):stdout
1%a

%none.hh == <<

%a == 1%a.cc.cxx.sm:code.list:ls

%test-a.sh == <<
x=`diff "$1" "$2" 2>&1`
if [ $? != 0 ]
then
   echo "a different to expected:">&2
   echo "$x"
   exit 1
fi
echo "PASS"

%expect-a == <<
a.cc
b.cc
d.cc
f.cc

%sorted-basenames-a == %a+cmd=sh (%sorted-basenames-a.sh):stdout

%sorted-basenames-a.sh == <<
while read n
do
   echo `basename "$n"`
done |
sort -u
